{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@core/*": ["src/core/*"],
      "@types/*": ["src/types/*"],
      "@infra/*": ["src/infra/*"],
      "@test/*": ["./test/*"]
    }
  },
  "exclude": ["build","dist"]
}
